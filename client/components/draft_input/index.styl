@import '../stylus_lib'

.draft-caption
	display flex
	justify-content flex-start
	position relative
	&__input
		width calc(100% \- 85px)
	.public-DraftEditorPlaceholder-root
		position absolute
		color gray-dark-color
	&__actions
		height 40px
		width 85px
		background-color black
		display flex
		justify-content space-around
		button
			width 50%
			background none transparent
			outline none
			border none
			padding 10px
			color gray-darker-color
			&:hover
				color gray-dark-color
				svg path
					fill gray-dark-color
			svg
				width 14px
				height 14px
				path
					fill gray-darker-color
			    transition all 0.15s
		#ITALIC
			garamond l-body
			font-style italic
			font-weight 600
			line-height 1em
			border-right 1px solid gray-darkest-color
			width calc(50% \- 1px)
	&__url-input
		position absolute
    left 0
    background black
    padding 10px
    button
    	background gray-dark-color
	    color white
	    font-size 11px
	    border 0
	    padding 0
	    width 80px
	    text-align center
