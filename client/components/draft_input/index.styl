@import '../stylus_lib'

.draft-text
  position relative
  width calc(100% \+ 40px)
  margin-top -20px
  margin-left -20px
  z-index -1
  &.is-editing
    z-index 100
  .public-DraftEditor-content
    garamond l-body
    padding 20px 20px 0px 20px
    p, .public-DraftStyleDefault-ltr
      margin-bottom 1em
    h2, h3
      .public-DraftStyleDefault-ltr
        margin-bottom 0
    h2
      garamond l-header
      font-size 28px
      line-height 1.2em
    h3
      avant-garde body
      line-height 27px
    ol li
      list-style decimal
      margin-left 20px
    ul li
      list-style disc
      margin-left 20px
  nav
    position absolute
    top -40px
    display flex !important
    background black
    width 100%
    justify-content center
  button
    font-weight 600
    height 40px
    width 50px
    color gray-dark-color
    line-height 1em !important
    background none
    border none
    border-right 1px solid gray-darkest-color
    transition color .15s
    &:hover
      color gray-color
    &[name='ITALIC'],
    &[name='header-two'],
    &[name='header-three']
      garamond l-body
    &[name='BOLD']
      font-weight 600
      avant-garde l-headline
    svg
      width 18px
      height 18px
    .st0, circle, g, path
      fill gray-dark-color
      transition color .15s
    &:hover
      .st0, circle, g, path
        fill gray-dark-color
        transition color .15s
      &:hover
        .st0, circle, g, path
          fill gray-color
      &[name='toc']
        svg
          width 22px
          height 22px
          #Group-2-Copy
            fill black
  &__input
    position relative
    .artist-follow
      background-image none !important
      &:before
        content url(/icons/circle_plus.svg)
        padding-left 10px
        vertical-align -8.5px
      &:after
        content 'Follow'
        garamond('s-body')
        text-transform none
        letter-spacing 0px
    .is-jump-link
      background-color #CFF8E6
      background-image none !important

.draft-caption
  display flex
  justify-content flex-start
  position relative
  &__input
    width calc(100% \- 85px)
    garamond l-caption
    padding-top 8px
  .public-DraftEditorPlaceholder-root
    position absolute
    color gray-dark-color
  .bordered-input.has-focus
    border-color purple-color
  &__actions
    height 40px
    width 85px
    background-color black
    display flex
    justify-content space-around
    button
      width 50%
      background none transparent
      outline none
      border none
      padding 10px
      color gray-dark-color
      &:hover
        color gray-color
        svg path
          fill gray-color
      svg
        width 14px
        height 14px
        path
          fill gray-dark-color
          transition all 0.15s
    .italic
      garamond l-body
      font-style italic
      font-weight 600
      line-height 1em
      border-right 1px solid gray-darkest-color
      width calc(50% \- 1px)
  &__url-input
    position absolute
    background-color black
    padding 10px
    input
      background-color white
      max-width 300px
      garamond l-caption
      height 30px
    svg
      width 35px
      height 35px
      position absolute
      right 90px
      top 8px
      cursor pointer
      z-index 100
      &:hover polygon
        fill red-color
        transition color .15s
    button.remove-link
      margin-left -30px
      width 30px
      background none transparent
      border none
    button.add-link
      background gray-lighter-color
      border 0
      padding 0
      width 80px
      height 30px
      text-align center
      avant-garde s-headline
      transition color .15s
      &:hover
        color purple-color
    button.add-link::after
      content ''
      width 0
      height 0
      border-left 7px solid transparent
      border-right 7px solid transparent
      border-bottom 7px solid #000
      position absolute
      top -7px
      left 50%
