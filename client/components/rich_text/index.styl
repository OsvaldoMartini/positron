@import '../stylus_lib'

.rich-text--url-input
  position absolute
  background-color black
  height 50px
  width 400px
  padding 10px
  display flex
  input
    background-color white
    width calc(400px \- 100px)
    garamond l-caption
    height 30px
  svg
    width 35px
    height 35px
    position absolute
    right 90px
    top 8px
    cursor pointer
    z-index 100
    &:hover polygon
      fill red-color
      transition color .15s
  button.remove-link
    margin-left -30px
    width 30px
    background none transparent
    border none
  button.add-link
    background gray-lighter-color
    border 0
    padding 0
    width 80px
    height 30px
    text-align center
    avant-garde s-headline
    transition color .15s
    &:hover
      color purple-color
  button.add-link::after
    content ''
    width 0
    height 0
    border-left 7px solid transparent
    border-right 7px solid transparent
    border-bottom 7px solid #000
    position absolute
    top -7px
    left 50%
