@import '../stylus_lib'

.flash-container
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0,0,0,0.5)
  z-index 10
  opacity 0
  transition opacity 300ms ease-in-out
  &.is-active
    opacity 1

.flash-body
  avant-garde()
  font-size default-avant-garde-font-size
  color white
  text-align center
  top 50%
  margin-top -(@font-size / 2)
  position absolute
  width 100%