.drag-container
  width 100%
  .drag-target
    position relative

  .drag-placeholder
    border 2px dashed gray-color
    min-height 2em
    background-color white
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    z-index 1

.edit-section-container[data-editing=true][data-type=image_collection] .drag-target[data-target=true]
  .esic-img-remove,
  .esic-caption
    display none