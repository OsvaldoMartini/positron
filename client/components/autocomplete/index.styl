@import '../stylus_lib'

.twitter-typeahead
  position relative

.tt-dropdown-menu
  width 100%
  border 2px solid purple-color
  z-index 3
  background white
  margin-top -2px

.tt-suggestion, .autocomplete-empty
  garamond()
  text-transform none
  letter-spacing 0

.tt-suggestion
  padding 10px
  border-bottom 1px solid gray-lighter-color
  cursor pointer
  &:last-child
    border-bottom 0

.tt-cursor
  background-color gray-lighter-color

.tt-hint
  display none

.twitter-typeahead
  width 100%

.twitter-typeahead input
  padding-left 36px
  background url("/icons/search.svg") 9px 9px no-repeat
  background-size 18px
  &:active, &:focus
    border-color purple-color
  &[disabled]
    background-color gray-lightest-color !important

.tt-input:focus
  border-color gray-lighter-color

.twitter-typeahead.is-loading
  position relative
  &::after
    content '.'
    spinner(17px, 4px, black)
    left inherit
    top 50%
    right 12px
    color transparent
    margin-top -1px

.autocomplete-empty
  padding 10px
  background gray-lighter-color
  color gray-darker-color

.autocomplete-header
  padding 10px
  background gray-lighter-color
  font-weight bold

.autocomplete-container--inline
  position relative
  display flex
  flex-wrap wrap
  padding 5px 10px 0 10px
  margin-top 5px
  border 2px solid gray-lighter-color
  min-height 40px
  &.is-focus
    border-color purple-color
  .bordered-input
    border none
    padding 0
  .remove-button
    height 20px
    width 15px
    background transparent center center no-repeat url(/icons/remove.svg)
    background-size 8px
    &:hover
      background-image url(/icons/remove_r.svg)
  .twitter-typeahead
    width initial
    flex 1
    position static !important
    input
      background none transparent
      margin 0
  .tt-dropdown-menu
    top calc(100% \+ 2px) !important
    right 0px !important
    left -2px !important
    min-width calc(100% \+ 4px)
.admin-form-container .autocomplete-container--inline .autocomplete-select-selected
  width initial
  background gray-lighter-color
  color black
  margin 0 10px 5px 0px
  border-radius 2px
  line-height 1em
  padding 2px 20px 1px 4px
  text-transform capitalize


.Autocomplete
  input
    padding-left 36px
    background url("/icons/search.svg") 9px 9px no-repeat
    background-size 18px
    width 100%
    &[disabled]
      background-color gray-lightest-color !important
  &__results
    border-left 1px solid gray-lighter-color
    border-right 1px solid gray-lighter-color
  &__results-bg
      position fixed
      left 0
      right 0
      top 0
      bottom 0
      opacity 0
      z-index -1
  &__item
    padding 10px
    background white
    display flex
    align-items center
    garamond l-body
    border-bottom 1px solid gray-lighter-color
    z-index 3
    &:hover
      background gray-lightest-color
      cursor pointer
    &---empty
      background gray-lighter-color
      color gray-darker-color
  &__item-img
    width 45px
    height 45px
    margin-right 15px
    background gray-lighter-color
    img
      height 45px
      width 45px
      object-fit cover
