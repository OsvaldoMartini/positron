thumbnail-width = 145px

.article-list
  &__result
    cursor default
  &__no-results
    garamond l-body
    margin-top 20px
  &__checkcircle
    width 18px
    height 18px
    display inline-block
    margin-right 20px
    vertical-align middle
    cursor pointer
    svg
      fill-color gray-color
    &:hover
      svg
        fill-color black
  &__article
    width "calc(100% - %s)" % (thumbnail-width + 20px)
    display inline-block
    cursor default
    &:hover
      opacity .7
      cursor pointer
  &__title
    .missing-title
      color gray-dark-color