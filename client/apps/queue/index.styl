.queue-tabs
  a
    padding-right 20px
    color gray-color
    &.is-active
      color black
    &:hover
      cursor pointer

.queue-queued
  margin 60px auto 120px auto
  .queued-articles
    &__header-container
      display flex
      border-bottom 1px solid gray-lighter-color
      padding-bottom 20px
      justify-content space-between
    &__header-text
      garamond('headline')

  .article-list
    &__checkcircle
      svg
        fill-color black
      &:hover
        fill-color gray-color