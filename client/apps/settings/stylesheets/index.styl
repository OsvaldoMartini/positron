@import '../../../components/stylus_lib'
@import '../client/curations/display'
@import '/authors'
@import '/editorial_features'
@import '/tags'
@import '/venice_admin'

#channel-edit__users
  input
    width 100%

.channel-edit
  &__metadata
    button
      margin-top 20px
      width 100%
      position relative
  &__links-item
    margin-top 20px
    width 50%
  &__header
    avant-garde('body')
    margin-bottom 10px

.settings__item-link
  garamond('l-body')
  text-decoration none
  display block
  margin-top 20px
  padding-bottom 20px
  border-bottom 1px solid gray-lighter-color
  &:hover
    color gray-darker-color
  &:last-of-type
    border-bottom none