#venice-root
  .venice-admin__fields
    margin-top 30px
    margin-bottom 120px
  .field-group
    display flex
    flex-direction column
    margin-bottom 30px
    .bordered-input
      width 100%
  .fields--full
    display flex
    justify-content space-between
  .fields--left, .fields--right
    width calc(50% \- 15px)
  label
    avant-garde s-headline
    margin-bottom 5px

  .dropdown-header
    display flex
    align-items center
    padding 15px 0
    border-bottom 1px solid gray-lighter-color
    h1
      garamond headline
    div
      height 1.25em
    svg
      margin-left 15px
      transform rotate(270deg)
  .active .dropdown-header svg
      transform rotate(0deg)