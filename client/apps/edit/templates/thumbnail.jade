section#edit-thumbnail
  header
    h1 Prepare your article for Artsy & social media
    h2 Choose a tag, title, thumbnail and teaser that summarizes the article and grabs the user's attention
    img( src='/images/edit_prepare_example.png')
  form#edit-thumbnail-inputs
    #edit-thumbnail-inputs-left
      label
        span.edit-required Thumbnail
        .dashed-file-upload-container
          | Drag & Drop or click<br> to upload your thumbnail
          input#edit-thumbnail-image( type='file' )
    #edit-thumbnail-inputs-right
      label#edit-thumbnail-title
        span.edit-required Title
        input.bordered-input(
          placeholder='Type a title'
          value=article.get('thumbnail_title')
        )
      label#edit-thumbnail-teaser
        span.edit-required Teaser
        textarea.bordered-input( placeholder='Type a teaser' )
          = article.get('thumbnail_teaser')
    label#edit-thumbnail-tags
      span.edit-required Tags
      br
      input.bordered-input(
        placeholder='Type tags separated by commas'
        value=article.get('tags') && article.get('tags').join(',')
      )