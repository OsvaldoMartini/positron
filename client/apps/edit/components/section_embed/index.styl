//
// Varying layouts
//
.edit-section-container[data-layout=column_width]
  nav .esa-column-width
    opacity 1
  .esa-artworks-list
    img
      width 100%
      margin-bottom artwork-img-bottom

.edit-section-container[data-layout=overflow_fillwidth]
  nav .esa-overflow-fillwidth
    opacity 1
  .esa-by-urls-container, input, .esa-autocomplete-menu
    width wide-input-width
  .esa-artworks-list
    text-align center
    li
      display inline-block
      vertical-align top
      padding 0 10px artwork-img-bottom 10px
      text-align left
      &:last-child
        padding-right 0
        padding-left 20px
        .edit-section-remove
          right -15px
      &:first-child
        padding-left 0
        padding-right 20px
        .edit-section-remove
          right 5px
    img
      max-width 100%
    .esa-img-container
      padding-bottom artwork-img-bottom
    .edit-section-remove
      right -5px
