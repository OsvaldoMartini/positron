section#edit-thumbnail
  header
    h1 Prepare your article for Artsy and social media
    h2 Choose a thumbnail image and title that captures the user&rsquo;s attention
    img( src='/images/edit_prepare_example.png')
  form#edit-thumbnail-inputs
    #edit-thumbnail-inputs-left
      include form
    #edit-thumbnail-inputs-right
      label#edit-thumbnail-title
        span.edit-required Title
        a.edit-use-article-title( href='#' ) Use article title
        textarea.bordered-input.edit-title-textarea(
          placeholder="Type a title that captures your reader's attention"
        )= article.get('thumbnail_title')
  if user.get('type') == 'Admin'
    section#edit-email
      h1 Email
      label.flat-checkbox.edit-email-toggle
        input.edit-email-checkbox( type='checkbox' name='email' )
        span Prepare this article for an email campaign
        label.edit-email-image
          span.edit-required(
            data-hidden=article.get('email_data') ? 'true' : 'false'
          ) Image
          #edit-email-upload
        label
          span Headline
          input.bordered-input.edit-email-text( name='headline' )
        label
          span Author
          input.bordered-input.edit-email-text( name='author' )
        label
          span Credit Line
          input.bordered-input.edit-email-text( name='creditline' )
        label
          span Credit Link
          input.bordered-input.edit-email-text( name='creditlink' )