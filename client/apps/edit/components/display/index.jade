section#edit-display.max-width-container
  form.edit-display.admin-form-container

    section.edit-display--magazine
      .admin-form-section
        h1 Magazine
        include ../../public/icons/edit_caret_down.svg
      .edit-display__inputs
        .admin-form-left
          - context = 'Magaine'
          include form
          label.edit-display__headline
            span.label.edit-required Magazine Headline
            .edit-char-count-message
              .edit-char-count
              span Characters
            input.bordered-input(
            value=article.get('thumbnail_title')
            )
          label.edit-display__description
            span.label Magazine Description
            .edit-char-count-message
              .edit-char-count
              span Characters
            textarea.bordered-input(
            )= article.get('description')
        .admin-form-right
          .edit-display__preview
          //- example image goes here

    //- Search
    section.edit-display--social
      .admin-form-section
        h1 Social
        include ../../public/icons/edit_caret_down.svg
      .edit-display__inputs
