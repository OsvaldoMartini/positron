            value=article.get('social_title')
            )
          label.edit-display__description
            span.label Social Description
            .edit-char-count-message
              .edit-char-count
              span Characters
            textarea.bordered-input(
            )= article.get('social_description')
        .admin-form-right
          .edit-display__preview
          //- example image goes here

    //- Search
    section.edit-display--search
      .admin-form-section
        h1 Search
        include ../../public/icons/edit_caret_down.svg
      .edit-display__inputs
        .admin-form-left
          label.edit-display__headline
            span.label Search Headline
            .edit-char-count-message
