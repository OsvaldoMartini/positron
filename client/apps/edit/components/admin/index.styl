@import '../stylus_lib'

gutter-size = 20px

#edit-admin
  padding-top header-size
  display none
  width overflow-width
  margin auto
  section
    border-top 1px solid gray-lighter-color
    margin-bottom 40px
    &:first-child
      border-top 0
  h1
    font-size 24px
    margin-top 40px
  h2
    margin 20px 0 whitespace-block-size 0
    line-height 1.6em
  h3
    avant-garde()
    font-size default-avant-garde-font-size
    margin-bottom 15px

#edit-admin-tier
  label
    width 50%
    &:first-child
      padding-right (gutter-size / 2)
      padding-left (gutter-size / 2)
  input
    margin 0 10px 0 0

.edit-admin-left, .edit-admin-right
  display inline-block
  vertical-align top

.edit-admin-left
  width 33.33%
  padding-right (gutter-size / 2)

.edit-admin-right
  width 66.66%
  padding-top 85px
  padding-left (gutter-size / 2)

.edit-admin-feature-list li:not(.eaf-input-li)
  border 1px solid gray-lighter-color
  padding 10px
  position relative
  height 38px
  span
    display inline-block
    overflow ellipsis
    max-width 250px
  &.eaf-mentioned
    color gray-dark-color
    position relative
    cursor pointer
    span
      max-width 190px
    &::after
      content 'Mentioned'
      float right
      avant-garde()
      font-size default-avant-garde-font-size - 2
      color gray-color
      margin-top 2px
      position absolute
      right 10px
    &::before
      content '.'
      color transparent
      background url(/icons/check.svg) center center no-repeat
      position absolute
      right 10px
      background-size 100%
      width 15px
      height 14px
      display none
    &:hover
      color purple-color
      &:before
        display block
      &:after
        content 'Feature'
        right 30px
        color purple-color
  &.eaf-featured
    border-color purple-color
    color purple-color
    position relative
    cursor pointer
    &::after
      content '.'
      color transparent
      background url(/icons/check_p.svg) center center no-repeat
      position absolute
      right 10px
      background-size 100%
      width 15px
      height 14px
    &::before
      content 'Unfeature'
      avant-garde()
      position absolute
      right 30px
      display none
      font-size default-avant-garde-font-size - 2
      margin-top 2px
    &:hover
      color red-color
      border-color red-color
      span
        max-width 175px
      &::before
        display block
      &::after
        background url(/icons/remove_r.svg) center center no-repeat

.eaf-input-li input
  padding 6px 12px 7px 12px
  width 100%

.eaf-input, .edit-admin-feature-list li
  width "calc(50% - %s)" % gutter-size
  margin 0 gutter-size gutter-size 0

.edit-admin-feature-list li:nth-child(2n+2)
  margin-right 0

.eaf-input, .edit-admin-feature-list, .edit-admin-feature-list li
  display inline-block
  vertical-align top

.edit-admin-feature-list
  width 100%
  margin-bottom 30px

#edit-admin-change-author input, #edit-admin-fair input
  width 100%
