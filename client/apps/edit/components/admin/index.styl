@import '../stylus_lib'

gutter-size = 30px

#edit-admin
  padding-top header-size
  display none

.edit-admin-slug-generate
  avant-garde s-headline
  display inline-block
  text-decoration none
  float right
  &:hover
    border-bottom 2px solid

#edit-admin-feature
  margin-top 20px
  label
    margin 10px 0 5px 0

.eaf-input-li
  label, input
    margin 0 !important

.edit-admin-feature-list li:not(.eaf-input-li)
  border 2px solid gray-lighter-color
  padding 10px 12px
  position relative
  height 40px
  line-height 1em
  span
    display inline-block
    overflow ellipsis
    max-width 240px
  &.eaf-mentioned
    color gray-dark-color
    position relative
    cursor pointer
    span
      max-width 170px
    &::after
      content 'Mentioned'
      float right
      avant-garde()
      font-size default-avant-garde-font-size - 2
      color gray-color
      margin-top 2px
      position absolute
      right 10px
    &::before
      content '.'
      color transparent
      background url(/icons/check.svg) center center no-repeat
      position absolute
      right 10px
      background-size 100%
      width 15px
      height 14px
      display none
    &:hover
      color purple-color
      &:before
        display block
        background-image url(/icons/check_p.svg)
      &:after
        content 'Feature'
        right 30px
        color purple-color
  &.eaf-featured
  &.eaf-contributing
    color purple-color
    position relative
    cursor pointer
    &::after
      content '.'
      color transparent
      background url(/icons/remove_g.svg) center center no-repeat
      position absolute
      right 10px
      top 11px
      background-size 100%
      width 15px
      height 14px

.eaf-input, .edit-admin-feature-list li
  width "calc(50% - %s)" % (gutter-size / 2)
  margin-right (gutter-size / 2)
  margin-bottom 10px

.edit-admin-feature-list li:nth-child(2n+2)
  margin-right 0
  margin-left (gutter-size / 2)

.eaf-input, .edit-admin-feature-list, .edit-admin-feature-list li
  display inline-block
  vertical-align top

.edit-admin-feature-list
  width 100%

.edit-admin-autocomplete-list-item
  margin-top 5px
