@import '../../stylus_lib'

section-btn-height = 130px

.edit-tool
  opacity 0
  z-index 2
  max-height 0
  position relative
  margin-left auto
  margin-right auto
  width 100%
  &:only-child
    &::after
      opacity 1
      color black
    svg
      fill-color black
  &:last-child
    opacity 1
    margin-top 15px
  &__container
    width section-tool-size - 11px
  &:hover
    opacity 1
    .edit-tool__container
      width 100%
    &::after
      opacity 0
    .edit-tool__icon
      svg
        fill-color black
      &::before
        opacity 1
        max-width 800px
  &::after
    content 'Add a section'
    width 150px
    display block
    float left
    position absolute
    top -6px
    left 35px
    avant-garde()
    color gray-dark-color
    font-size default-avant-garde-font-size - 1
    opacity 0

.edit-tool__icon
  position relative
  cursor pointer
  top -6px
  &::before
    content '.'
    border-top 2px solid black
    position absolute
    top 6px
    left 16px
    width "calc(100% - %s)" % @left
    max-width 0
    color transparent
    opacity 0
    transition opacity 0.15s ease-out, max-width 0.15s ease-out
    height 20px
    z-index 2
  svg
    z-index 1
    fill-color gray-color
    transition fill 0.1s
    width section-tool-size + 10px
    height section-tool-size + 10px
    position absolute
    left -18px
    top -13px
    rect
      fill white !important

.edit-tool__menu
  display none
  border 2px solid black
  position relative
  left 0
  width 100%
  overflow hidden
  opacity 0
  border-top-color transparent
  background gray-lightest-color
  li
    width 33.33%
    avant-garde()
    background white
    height 89px
    border-right 1px solid gray-color
    border-bottom 1px solid gray-color
    vertical-align top
    line-height 124px
    font-size small-avant-garde-font-size
    display inline-block
    text-align center
    cursor pointer
    position relative
    &:last-child
      border-right none
    svg
      max-width 40px
      max-height 40px
      position absolute
      top 30px
      left calc(50% - 17px)
    .edit-menu-icon-text svg
      margin-top -3px
      width 35px
      height 17px
      left calc(50% - 17px)
    .edit-menu-icon-video svg
      margin-top -11px
      height 34px
      left calc(50% - 18px)
    .edit-menu-icon-hero-image svg, .edit-menu-icon-hero-video svg, .edit-menu-icon-hero-fullscreen svg
      width 50px
      left calc(50% - 21px)
      top 20px
    .edit-menu-icon-hero-fullscreen svg
      top 11px
    .edit-menu-icon-embed svg
      top 23px
      width 31px
      height 22px
      left calc(50% - 17px)
    .edit-menu-icon-callout svg
      top 23px
      width 40px
      height 23px
      left calc(50% - 20px)
    .edit-menu-icon-image-set svg
      top 15px
      left calc(50% - 18px)

.edit-tool[data-state-open="true"]
  max-height (section-btn-height * 4)
  width 100%
  opacity 1
  position relative
  transition max-height 0.15s linear, opacity 0.15s linear
  .edit-tool__container
    width 100%
  .edit-tool__icon::before
    opacity 1
    max-width 800px
  &::after
    opacity 0
  .edit-tool__icon
    &::after
      display block
    svg
      fill-color black
  .edit-tool__menu
    opacity 1
    max-height (section-btn-height * 2)
    transition max-height 0.15s linear, opacity 0.15s linear
    display flex

.classic .edit-tool
  max-width classic-body-w-margin

.standard .edit-tool
  max-width standard-body-w-margin