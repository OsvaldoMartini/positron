
.edit-header
  position relative
  .DraftEditor-root
    position relative
  .public-DraftEditorPlaceholder-inner
    position absolute
    top 0
    color gray-dark-color
  .plain-text[name='title']
    .public-DraftEditorPlaceholder-inner:after
      content ' *'
      color red-color
  .upload-progress
    min-width 0
  .feature__deck
    min-width 30%
    max-width 50%
  div[class^='feature_header__TextAsset']
    position relative
    min-height 440px
  &__image-container
    position absolute
    top 20px
    left 20px
    right 20px
    bottom 20px
  .file-input.simple
    height 100%
    max-height 400px
    min-height 400px
    .file-input__upload-container
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      h1:before
        content '+ '
        font-size 1.5em
  &__remove
    width 30px
    height 30px
    position absolute
    right 8px
    top 8px
    circle
      transition all .3s
    &:hover
      cursor pointer
      circle
        fill red-color

#edit-content .edit-header a
  background-image none

.edit-header--controls
  position absolute
  z-index 1
  right 20px
  top 20px
  AvantGarde('s13')
  text-transform uppercase
  text-align right
  &-open
    cursor pointer
  &__bg
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    z-index -1
  &__layout
    border 2px solid
    display flex
    AvantGarde('s11')
    margin-top 5px
    text-align center
    a
      padding 20px
      border-right 1px solid gray-color
      background white
      cursor pointer
      &:last-child
        border-right none

.classic .edit-header
  padding-top 10px
  .plain-text .public-DraftEditorPlaceholder-inner
    left 0
    right 0
  .rich-text--paragraph
    font-size 20px
    line-height 26px
    text-align left
    margin-top 10px

.standard .edit-header
  padding-top 10px

.feature .edit-header
  [data-type=split]
      max-height calc(100vh \- 95px)
    .file-input.simple
      max-height 100%
    .edit-header__image-container
      top 0
      left 0
      right 0
      bottom 0
    .feature__deck
      max-width 100%
  [data-type=fullscreen]
    max-height calc(100vh \- 95px)
    .file-input.simple
      height inherit
      min-height 0
      max-height 100%
      width 200px
      z-index 1
      padding 0
      h1
        font-size 13px
    .file-input__upload-container
      align-items flex-start
      left -20px
      background none
    .public-DraftEditorPlaceholder-inner
      color white
