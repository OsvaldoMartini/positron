.edit-header
  &__container
    AvantGarde('s13')
    text-transform uppercase
    padding 20px

  &--video
    background rgba(255, 255, 255, .5)
    position absolute
    left 20px
    z-index 2
    text-align left
    cursor pointer
    user-select none

    .edit-section-container
      margin-top 239px
      width: 520px

    .edit-controls
      padding-top 12px

  &--controls
    position absolute
    right 20px
    z-index 3
    text-align right
    user-select none

    &-open
      cursor pointer

    &__bg
      position fixed
      top 0
      left 0
      right 0
      bottom 0
      z-index 2

    &__layout
      border 2px solid
      display flex
      AvantGarde('s11')
      margin-top 5px
      text-align center

      a
        padding 20px
        border-right 1px solid gray-color
        background white
        cursor pointer
        display flex
        flex-direction column
        align-items center

        &:last-child
          border-right none

        svg
          margin 0 10px 10px 10px
