#edit-seo
  width 100%
  height 40px
  background-color #f8f8f8
  display flex
  align-items center
  padding 0 20px
  border-bottom 1px solid gray-lighter-color
  cursor pointer
  .edit-seo
    &__open
      margin-left auto
      svg
        vertical-align middle
    &__header, &__unresolved-msg
      garamond('l-caption')

.yoast-modal
  overflow scroll
  bottom 5%

.screen-reader-text
#edit-seo__content-field
.snippet-editor__heading
  display none

#edit-seo__output
  margin-bottom 10px

#snippet_title
  color #1a0dab
  font-size 18px
  font-family arial,sans-serif
  line-height 1.2

#url_container
  font-size 14px
  color #006621
  font-style normal
  line-height 16px
  font-family arial,sans-serif

#meta_container
  line-height 1.4
  color #545454
  font-family arial,sans-serif
  font-size small

.snippet-editor
  &__container
    position relative
    cursor pointer

  &__form
    padding 20px

  &__label
    display block
    width 100%
    margin-top 1em
    position relative

    &:first-child
      margin-top 0

  &__input
    display block
    width 100%
    margin-top 5px
    border 2px solid gray-lighter-color

    max-width 100%
    box-sizing border-box

    &:focus
      border 2px solid purple-color
      outline none

  &__preview
    padding 15px 20px

.snippet-editor__meta-description
  height 70px

.snippet-editor__submit
  margin-top 1em

#meta_container
  clear both
  min-height 20px
  margin-bottom 10px

.snippet-editor
  &__progress
    appearance none

    border none

    box-sizing border-box
    display block

    margin-top 5px
    height 8px
    width 100%

    &--fallback
      background-color #f7f7f7
      height 8px
      border 1px #bfbfbf

  &__progress-bar
    width 0
    height 100%
    max-width 100%

  &__date
    color #808080
    font-size 13px
    line-height 1.4

  &--hidden
    display none

.wpseo-score-icon
  &.bad, &.ok, &.good, &.na
  	display inline-block
  	width 12px
  	height 12px
  	margin 3px 10px 0 3px
  	border-radius 50%
  	vertical-align top
  &.na
    background gray-dark-color
  &.bad
  	background #dc3232
  &.ok
  	background #ee7c1b
  &.good
  	background #7ad03a

#snippet_citeBase
#snippet_cite
  float left