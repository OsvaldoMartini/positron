@import '../../../stylus_lib'

.edit-section-fullscreen
  height 100%
  .edit-section-controls
    fill-container()
    position absolute
    top 0
    left 0
    z-index 4
    display none

.esf-placeholder
  width 100%
  height calc(99vh - 95px)
  background-color gray-lighter-color
  position relative

.edit-section-container-block
  position relative
  height calc(99vh - 95px)

.edit-section-container[data-type=fullscreen]
  height calc(99vh - 95px)
  width calc(100vw - 110px)
  padding 0px
  overflow hidden
  margin-bottom 1em
  &::after
    border 0
  .esf-title
    garamond xl-headline
  .edit-author-section
    color white
    border-color white
    margin-top 0px
    width 75%
    display flex
    p
      garamond l-body
      &:first-child
        font-weight 600
        margin-right 20px

#edit-content .edit-section-container[data-type=fullscreen] .edit-section-controls
  display block
  height 100%
  background transparent

.esf-right-controls-container
  float right
  margin-top 20px
  .edit-section-remove
    right 20px
    top 20px
    display inline-block

.esf-change-background
  avant-garde()
  display inline-block
  margin-right 75px
  position relative
  cursor pointer
  color white
  input
    width 100%
    height 100%
    display block
    position absolute
    opacity 0
    top 0
    left 0
    cursor pointer

.esf-fullscreen
  position absolute
  background-color black
  top 0
  right 0
  bottom 0
  left 0
  opacity .5

.esf-fullscreen-container
  z-index 3
  background-color black
  width 100%
  height 100%
  background-size cover
  background-position 50%
  video
    display block
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    z-index 1
    @media screen and (max-aspect-ratio: 1920/1080)
      height 100%
    @media screen and (min-aspect-ratio: 1920/1080)
      width 100%


.esf-text-container
  z-index 4
  position absolute
  bottom 0
  width 100%
  margin 30px auto

.esf-title
  cursor text
  width 100%
  display block
  position relative
  color white
  garamond 'xxl-headline'
  overflow hidden
  word-wrap break-word
  resize horizontal
  max-height 152px
  text-align left
  margin auto
  max-width 75%
  &::-webkit-input-placeholder
    color white
