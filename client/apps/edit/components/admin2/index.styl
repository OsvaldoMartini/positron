@import '../stylus_lib'
@import './article'
@import './verticals_tags'
@import './featuring'

.dropdown-header
  display flex
  align-items center
  padding 15px 0
  border-bottom 1px solid gray-lighter-color
  h1
    garamond headline
  div
    height 1.25em
  svg
    margin-left 15px
    transform rotate(270deg)

section.active
  .dropdown-header svg
    transform rotate(0deg)

.edit-admin__fields
  margin-top 30px
  margin-bottom 120px
  display flex
  justify-content space-between
  .fields-left,
  .fields-right
    width calc(50% \- 15px)
  .field-group
    margin-bottom 40px
    &--inline
      display flex
      align-items center
  .fields-full
    min-width 100%
    display flex
    justify-content space-between
  .fields-col-3
    width calc(33% \- 20px)
  input[disabled], textarea[disabled]
    background-color gray-lightest-color
    border-color gray-lighter-color
    cursor no-drop

section.image-upload-form
  .image-upload-form-remove
    background url(/icons/remove_g.svg) center center no-repeat
    background-color black
    background-size 18px
    &:hover
      background-color red-color
section.image-upload-form.disabled
  background gray-lightest-color
  cursor no-drop
  span, h1
    color gray-dark-color !important

.edit-admin--super-article
  flex-direction column
  .field-group--inline.flat-checkbox
    margin-bottom 30px
  .fields-col-3:nth-child(2)
    display flex
    flex-direction column
    justify-content space-between
  .image-upload-form, textarea
    height 175px
  .image-upload-form h1
    margin-top 60px

.edit-admin--appearances
  flex-direction column
