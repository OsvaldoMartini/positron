@import '../../../components/stylus_lib'
@import './lib'

#edit-header
  padding margin-size
  position fixed
  top 0
  left 0
  padding-left sidebar-width + margin-size
  border-bottom 1px solid gray-lighter-color
  width 100%
  min-width 866px
  z-index 1
  background white
  .avant-garde-button
    font-size default-avant-garde-font-size - 2

#edit-tabs
  a:first-child
    border-right 0
  a:not(#edit-publish)
    position relative
    padding-right 45px
    color gray-color
    transition none
    &.is-active
      color black
    svg
      fill-color gray-lighter-color
      position absolute
      right 15px
      top 10px
      height 15px
  &.edit-tabs-complete svg
    fill-color green-light-color

#edit-publish
  margin-left margin-size

#edit-header-right
  position absolute
  right margin-size
  top margin-size
  a
    margin-right margin-size
    &:last-child
      margin-right 0

#edit-delete
  border 0