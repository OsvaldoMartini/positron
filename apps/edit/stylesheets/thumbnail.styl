@import '../../../components/stylus_lib'
@import './lib'

inputs-margin = 15px

#edit-thumbnail
  margin-top header-size
  display none
  header
    text-align center
    width 100%
    overflow hidden
    background gray-lightest-color
    h1
      font-size 27px
      padding-top 40px
    h2
      font-size 16px
      padding 15px 0 43px 0
    img
      height 463px
      display block
      margin auto
      margin-bottom -70px

#edit-thumbnail-inputs
  width 800px
  margin 50px auto
  .dashed-file-upload-container
    width 270px
    height 180px
    garamond()
    color gray-lighter-color
    text-transform none
    letter-spacing 0
    padding-top 66px
    color gray-dark-color
    text-align center
    font-size default-garamond-font-size
    line-height 1.2em
    transition color 0.3s, border-color 0.3s
  label
    avant-garde()
    font-size default-avant-garde-font-size - 2
    span
      padding-bottom inputs-margin - 5
      display inline-block

#edit-thumbnail-inputs-right, #edit-thumbnail-inputs-left
  display inline-block
  vertical-align top

#edit-thumbnail-inputs-right
  width 530px
  padding-left inputs-margin
  input, textarea
    width 100%
    display block
  textarea
    height 105px
  label:nth-of-type(2)
    display block
    margin-top 7px

#edit-thumbnail-tags
  margin-top inputs-margin
  display block
  width 100%
  input
    width 100%